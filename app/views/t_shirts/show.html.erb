<h1><%= @t_shirt.name %></h1>

<div class="catalog">
    <div>
        <img src="<%= @t_shirt.image_url %>" alt="<%= @t_shirt.name %>">
    </div>
    <div>
        <p><%= @t_shirt.description %></p>
    </div>
    <div>
        <p>Price: $<%= @t_shirt.price %></p>
    </div>
    <div>
        <p>Size: <%= @t_shirt.size %></p>
    </div>

</div>
<%= button_to "Add to Cart", cart_items_path(t_shirt_id: @t_shirt.id) %>

<div>
    <%= form_with(model: [@t_shirt, Opinion.new], local: true) do |form| %>
        <div>
            <%= form.label :content %>
            <%= form.text_area :content %>
        </div>

        <div>
            <%= form.label :rating %>
            <%= form.number_field :rating, in: 1..5 %>
        </div>
        <div>
            <%= form.submit "Add Opinion" %>
        </div>
    <% end %>

    <% if @t_shirt.opinions.any? %>
        <h2>Opinions:</h2>
        <% @t_shirt.opinions.each do |opinion| %>
            <div>
                <p><%= opinion.content %></p>
                <p>Rating: <%= opinion.rating %></p>
            </div>
        <% end %>
    <% end %>
</div>
